# TickTick Orchestrator - Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# Security
JWT_SECRET=your-super-secret-jwt-key-here
ADMIN_PASSWORD=your-admin-password

# TickTick API Configuration
TICKTICK_CLIENT_ID=your-ticktick-client-id
TICKTICK_CLIENT_SECRET=your-ticktick-client-secret
TICKTICK_REDIRECT_URI=http://localhost:3000/auth/ticktick/callback

# Google Calendar API Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Database
DATABASE_PATH=./data/orchestrator.db

# Scheduling Configuration
DAILY_SCHEDULER_TIME=06:00
SYNC_INTERVAL_MINUTES=30
MAX_DAILY_TASKS=3

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./data/logs/orchestrator.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Calendar Configuration
JEREMY_CALENDAR_ID=jeremy.polizzie@gmail.com
BUSINESS_CALENDAR_ID=plusdeclients@gmail.com

# Task Priority Weights
COMPLEXITY_WEIGHT=0.4
URGENCY_WEIGHT=0.3
DURATION_WEIGHT=0.2
CONTEXT_WEIGHT=0.1